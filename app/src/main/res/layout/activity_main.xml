<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnStartExplicitActivity"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"
            android:text="@string/btnExplicitActivity"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="52dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/txtResult"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnStartImplicitActivity"
            app:layout_constraintStart_toStartOf="@+id/btnStartExplicitActivity"
            app:layout_constraintEnd_toEndOf="@+id/btnStartExplicitActivity" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnStartExplicitActivity"
            app:layout_constraintHorizontal_bias="0.495" android:text="@string/btnImplicitActivity"/>
    <Button
            android:text="@string/btnSpodeli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="@+id/btnStartImplicitActivity"
            app:layout_constraintEnd_toEndOf="@+id/btnStartImplicitActivity" android:id="@+id/btnSpodeli"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/btnStartImplicitActivity"
            app:layout_constraintHorizontal_bias="0.495"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/btnSelecImage" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSpodeli" app:layout_constraintHorizontal_bias="0.498"
            android:text="@string/btnSelectImage"/>
</androidx.constraintlayout.widget.ConstraintLayout>