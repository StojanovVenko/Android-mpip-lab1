<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ExplicitActivity">

    <EditText
            android:layout_width="256dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtInput"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/btnOtkazhi" app:layout_constraintEnd_toEndOf="@+id/btnVoRed"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/btnOtkazhi"
            app:layout_constraintVertical_bias="0.859"/>
    <Button
            android:text="@string/btnVoRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnVoRed"
            app:layout_constraintStart_toEndOf="@+id/btnOtkazhi" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/btnOtkazhi"
            app:layout_constrainedWidth="false"/>
    <Button
            android:text="@string/btnOtkazhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnOtkazhi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnVoRed"
            android:layout_marginBottom="340dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constrainedWidth="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>